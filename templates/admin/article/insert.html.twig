{% extends "base.html.twig" %}
{% block title %}
    formulaire article
{% endblock %}
{% block main %}
    <div class="container">
        <h2 class="mt-4 text-center">Creation d article</h2>

        {#
        j utilise la fonction de twig FORM pour afficher mon formulaire
        et le nom de ma variable(formarticle) en parametre

        #}

        {{ form_start(formarticle) }}
        <div class="row justify-content-center">
            <div class="col-3 text-center">{{ form_row(formarticle.title) }}</div>
            <div class="col-3  text-center">{{ form_row(formarticle.image) }}</div>
        </div>
        <div class="row justify-content-center">
            <div class="col-4 text-center">{{ form_row(formarticle.creationDate) }}</div>
            <div class="col-4 text-center">{{ form_row( formarticle.publicationDate) }}</div>
        </div>
        <div class="row justify-content-center">
            <div class="col-3 text-center">{{ form_row(formarticle.content) }}</div>
        </div>
        <div class="row justify-content-center">
            <div class="col-12 text-center mt-4">{{ form_row(formarticle.isPublished) }}</div>
        </div> <div class="row justify-content-center">
            {{ form_row(formarticle.valider) }}
        </div>
        {{ form_rest(formarticle)}}


        {{ form_end(formarticle) }}
    </div>
{% endblock %}