{% extends "base.html.twig" %}

{% block title %}
    tous les articles
{% endblock %}



{% block main %}

    <div class="container ">
        <h1 class="text-center mt-4 pt-4"> Tous nos article</h1>
        <div class="row mt-5 justify-content-between align-items-center p-4  ">
            {% for article in articles %}
                {% if article.isPublished %}


                <div class=" mt-5  col-12   align-items-center border border-dark rounded rounded-xl p-4 btn-primary">
                    <a href="{{ path('article',{id:article.id }) }}" class="text-center text-dark mt-3  "><h2>{{ article.title }}</h2></a>
                    <div class=" row align-items-center justify-content-between ">

                        <p class="col-4">{{ article.content }}</p>
                        <div class="col-6 mt-3"><img src="{{ article.image }}" alt="{{ article.title }}" class="img-fluid"></div>
                    </div>
                </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>

        <div class="pagination justify-content-center">
            <div class="">    {{ knp_pagination_render(articles) }}</div>
        </div>

{% endblock %}
